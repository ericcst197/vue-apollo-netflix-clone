{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["src/**/*", "src/**/*.vue", "env.d.ts"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "ignoreDeprecations": "5.0",
        "lib": ["ES2022", "DOM"],
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "types": ["vite/client"],
        "strict": true
    },
}
